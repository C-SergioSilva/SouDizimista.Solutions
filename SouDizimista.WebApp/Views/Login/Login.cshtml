@model SouDizimista.Services.ServicesEntity.ServicesUsuario

@{
   Layout = "_Layout";
}

<h2> Sou Dizimista </h2>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Login" method="post">
    <div class="form-group">
        <label>Usuário</label>
        <input asp-for="NomeUsuario" class="form-control" />
        <span asp-validation-for="NomeUsuario" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="EmailUsuario">E-mail</label>
        <input asp-for="EmailUsuario" class="form-control" />
        <span asp-validation-for="EmailUsuario" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SenhaUsuario">Senha</label>
        <input type="password" asp-for="SenhaUsuario" class="form-control" />
        <span asp-validation-for="SenhaUsuario" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Login</button>
</form>

<div class="mt-3">
    <a asp-controller="Account" asp-action="ForgotPassword">Esqueci a Senha</a>
</div>
