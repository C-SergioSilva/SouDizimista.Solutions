<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sou Dizimista</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/styles/main.css" />
    <link rel="stylesheet" href="~/styles/main-content.css" />
    <link rel="stylesheet" href="~/styles/nossos-dizimista.css" />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&display=swap" rel="stylesheet">
    <link href="~/lib/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" rel="stylesheet" />
</head>
<body>
    <header>
        <div class="header">

            <div class="logo">
                <div class="logo-img"></div>
            </div>

            <div class="titulo-modulo">
                titulo
            </div>

            <div class="modulos-menu">

                <div class="usuario">
                    Usuário
                </div>

                <div class="modulos">
                    
                    <i class="bi bi-list img-menu h2" id="icone-suspenso"></i>
                   @*  <img id="icone-suspenso"  src="/icones/menu.png"> *@

                    <nav class="menu-nav menu-suspenso-navigation">
                       <ul></ul>
                    </nav>
                </div>
            </div>

        </div>
              
        <aside id="navigator" class="navigation">
            <section>
                <h1 class="funcionalidade"> Funcionalidades </h1>
                <ul class="nav-opcao"></ul>              
            </section>
        </aside>
    </header>
    <div class="content-body">
        <div class="container">
            <main role="main" class="content-main">
                @RenderBody()
            </main>
        </div>
    </div>


    <footer class="border-top footer-gms text-muted">
        <div class="container-footer">
            &copy; Gms-Solutions-Technology <a asp-area="" asp-controller="Home" asp-action="Privacy"></a>
        </div>
    </footer>
    <script src="~/js/adiciona-dizimista.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/menu_lateral.js"></script>
    <script src="~/js/menu-suspenso.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
