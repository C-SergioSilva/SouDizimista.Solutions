<div class="container">

    <div class="row">

        <div class="col-lg-12">
            <div class="card card-custom">

                <form id="frmDizimista">

                    <input type="hidden" name="Id" id="Id" value="@ViewBag.Id" />
                    <input type="hidden" name="action" id="action" value="@ViewBag.Acao" />

                    <div class="card-body">

                        <br />
                        <h2 class="text-dark font-weight-bold">Dados do Dizimista</h2>
                        <hr /> <br />

                        <div class="form-group row">
                            <div class="col-6">
                                <label>Nome do Dizimista</label>
                                <input name="nome" class="form-control btnaction readOnly" type="text" data-viacep="nome" data-receitaws="nome" value="" id="nome" />
                            </div>

                            <div class="col-4">

                                <label>Valor do Dizimo (R$):*</label>
                                <input name="valorDevolucao" type="text" class="form-control readOnly vlr"
                                       data-inputmask="'alias': 'currency', 'prefix': '', 'groupSeparator': '.', 'radixPoint': ',', 'digits': 2" placeholder="(R$):*" />

                              <div class="fv-plugins-message-container invalid-feedback" id="erros-value"></div>


                            </div>
                        </div>


                        <br />
                        <h2 class="text-dark font-weight-bold">Dados da Localidade</h2>
                        <hr /> <br />

                        <div>

                            <div class="form-group row">

                                <div class="col-5">
                                    <label>Cep</label>
                                    <input name="cep" class="form-control buscaCep btnaction readOnly" type="text" data-viacep="cep" data-receitaws="cep" id="cep" />
                                </div>
                                <div class="col-3">
                                    <button id="btnbuscarCep" type="button" class="btn btn-success btnHide" style="margin-top: 2em; margin-left: -1em;">Buscar</button>
                                </div>
                            </div>

                            <div class="form-group row">

                                <div class="col-6">

                                    <label>Logradouro</label>
                                    <input class="form-control readOnly" name="logradouro" type="text" data-viacep="logradouro" data-receitaws="logradouro" value="" id="logradouro" />

                                </div>

                                <div class="col-6">

                                    <label>Numero</label>
                                    <input class="form-control btnHide readOnly" type="text" data-viacep="numero" data-receitaws="numero" name="numero" id="numero" />

                                </div>
                            </div>

                            <div class="form-group row">

                                <div class="col-6">

                                    <label>Complemento</label>
                                    <input class="form-control btnaction readOnly" name="complemento" type="text" data-viacep="complemento" data-receitaws="complemento" value="" id="complemento" />

                                </div>

                                <div class="col-6">

                                    <label>Bairro</label>
                                    <input class="form-control btnaction readOnly" name="bairro" type="text" data-viacep="bairro" data-receitaws="bairro" id="bairro" />

                                </div>

                            </div>

                            <div class="form-group row">

                                <div class="col-6">

                                    <label>Estado</label>
                                    <input class="form-control btnaction readOnly" name="estado" type="text" data-viacep="uf" data-receitaws="uf" id="estado" />

                                </div>


                                <div class="col-6">

                                    <label>Municipio</label>
                                    <input class="form-control btnaction readOnly" name="municipio" type="text" data-viacep="localidade" data-receitaws="municipio" id="municipio" />

                                </div>

                            </div>
                        </div>

                    </div>
                    <div class="card-footer">
                        <button id="btnSalvar" type="button" class="btn btn-success btnHide"><i class="far fa-save"></i>Salvar</button>
                        <a href="@Url.Action("GetAllDizimista", "Dizimista")" class="btn btn-text-danger btn-hover-light-danger font-weight-bold mr-2 voltar">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {

    <script src="~/js/Dizimista/AdicionaDizimista.js"></script>

}

